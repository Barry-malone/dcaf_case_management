<!-- locals: -->

<table class="table border-side">
  <table class="table border-side">
    <thead>
      <tr>
        <th>Clinic Name</th>
        <th>PT initials</th>
        <th>Abortion Care $</th>
        <th>Weeks at Procedure</th>
        <%= th_autosortable 'Pledge Sent Date', 'string', local_assigns %>
        <th>Check #</th>
        <th>Date of Check</th>
      </tr>
    </thead>
    <tbody id="patient_information_form">
        <% patients.each do |patient| %>
          <%= bootstrap_form_for patient, remote: true do |f| %>

            <tr>
                <td><%= patient.clinic.name %></td>
                <td><%= link_to patientInitials(patient), edit_patient_path(patient) %></td>
              <%= f.fields_for patient.fulfillment do |pt| %>
                <td><%= pt.text_field :procedure_cost, hide_label: true, autocomplete: 'off', prepend: '$'%></td>
                <td><%= pt.select :gestation_at_procedure,
                            options_for_select(weeks_options, patient.fulfillment.gestation_at_procedure),
                            hide_label: true,
                            autocomplete: 'off' %></td>
                <td><%= patient.fulfillment.created_at %></td>
                <td><%= pt.text_field :check_number, hide_label: true, autocomplete: 'off'%></td>
                <td><%= pt.date_field :date_of_check, hide_label: true, autocomplete: 'off' %></td>
              <% end %>
            </tr>

          <% end %>
      <% end %>
    </tbody>
  </table>
